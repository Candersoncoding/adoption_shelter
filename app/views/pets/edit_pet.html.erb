<div id="editpage"><div id="head"><h2 class="text-success">Hi again, <%= current_user.first_name %>!</h2> <div class="logout"><a href="/pets" role="button" class="btn btn-outline-light">Dashboard</a><a href="/logout" data-method="delete" role="button" class="btn btn-outline-dark">Logout</a></div></div>

    <div class="jumbotron">
        <h3 class="display-8 text-info">Please, help us get to know our newest friend a little better.</h3>
        <hr class="my-2">
        

            <form action="/pets/edit/<%= @pet.id%>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input name="_method" type="hidden" value="patch">
            <input type="hidden" name="pet[user_id]" value="<%= current_user.id%>">
                <% if flash[:errors] %>
                <div class="form-group">
                        <div type="hidden" class="alert alert-danger" role="alert">
                        <% flash[:errors].each do |e| %>
                            <strong><%= e %></strong><br>
                            <% end %>
                        </div>
                </div>             
                        <% end %>
                <div class="form-group">
                    <label for="formGroupExampleInput">Name:</label>
                    <input type="text" class="form-control" name="pet[name]" id="formGroupExampleInput" value="<%= @pet.name%>">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Type of animal:</label>
                    <input type="text" class="form-control" name="pet[kind]" id="formGroupExampleInput2" value="<%= @pet.kind %>" >
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput3">Breed:</label>
                    <input type="text" class="form-control" name="pet[breed]" id="formGroupExampleInput3" value="<%= @pet.breed %>" >
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput4">Color:</label>
                    <input type="text" class="form-control" name="pet[color]" id="formGroupExampleInput4" value="<%= @pet.color %>">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput5">Age:</label>
                    <input type="text" class="form-control" name="pet[age]" id="formGroupExampleInput5" value="<%= @pet.age %>">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput6">Picture:</label>
                    <input type="text" class="form-control" name="pet[image_url]" id="formGroupExampleInput6" value="<%= @pet.image_url %>">
                </div>
                <input type="submit" value="Confirm Changes" class="btn btn-outline-success"> <a href="/pets" role="button" class="btn btn-outline-danger">Cancel</a>
            </form>
        </div>
    <footer id="footer_edit">
    
    </footer>
    </div>
</div>
